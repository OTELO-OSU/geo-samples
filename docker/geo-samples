FROM php:7.4-apache

RUN docker-php-ext-install pdo pdo_mysql

RUN apt-get update && apt-get install -y libonig-dev \
    && docker-php-ext-install mbstring exif


RUN apt-get update && apt-get install -y \
    unzip \
    libzip-dev \
    && docker-php-ext-install zip


ENV APACHE_DOCUMENT_ROOT=/var/www/src

RUN sed -ri -e 's!/var/www/html!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/sites-available/*.conf
RUN sed -ri -e 's!/var/www/!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/apache2.conf /etc/apache2/conf-available/*.conf

# Use the default production configuration
RUN mv "$PHP_INI_DIR/php.ini-production" "$PHP_INI_DIR/php.ini"

# Désactiver le php info
RUN echo "disable_functions = phpinfo" >> /usr/local/etc/php/conf.d/disable_functions.ini

COPY . /var/www/

# Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

RUN a2enmod rewrite

# Exécuter composer install pour installer les dépendances PHP
RUN composer install --working-dir=/var/www/ --no-dev --optimize-autoloader